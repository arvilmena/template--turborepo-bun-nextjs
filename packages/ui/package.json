{
  "name": "@my/ui",
  "version": "0.0.0",
  "sideEffects": ["**/*.css"],
  "files": ["dist"],
  "exports": {
    "./theme.css": "./src/theme.css",
    "./styles.css": "./dist/index.css",
    "./*": "./src/*.tsx"
  },
  "license": "MIT",
  "scripts": {
    "build": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "check-types": "bun --bun tsc --noEmit",
    "dev": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "bun --bun eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@my/eslint-config": "*",
    "@my/tailwind-config": "*",
    "@my/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^19.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.25.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.8.2"
  }
}
